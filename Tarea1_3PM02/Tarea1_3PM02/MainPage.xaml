<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1_3PM02.MainPage">

    <StackLayout>
        <Entry  x:Name="txtnombre" Placeholder="Nombres" Keyboard="Text" />

        <Entry  x:Name="txtapellido" Placeholder="Apellidos" Keyboard="Text" />

        <Entry  x:Name="txtedad" Placeholder="Apellidos" Keyboard="Numeric" />

        <Entry  x:Name="txtcorreo" Placeholder="Apellidos" Keyboard="Email" />

        <Entry  x:Name="txtdireccion" Placeholder="Dirección" Keyboard="Text" />

        <Button x:Name="btninf" Text="Enviar datos" Clicked="btninf_Clicked"/>
    </StackLayout>

</ContentPage>
